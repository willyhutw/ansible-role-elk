---
# Remember, leave a key empty if there is no value.  None will be a string,
# not a Python "NoneType"

client:
  hosts:
  {% if es_api_nic == 'all' %}
    - 127.0.0.1
  {% else %}
    - {{hostvars[inventory_hostname]['ansible_'+es_api_nic]['ipv4']['address']}}
  {% endif %}
  port: {{es_api_port}}
  url_prefix:
  use_ssl: False
  certificate:
  client_cert:
  client_key:
  aws_key:
  aws_secret_key:
  aws_region:
  ssl_no_validate: False
  http_auth:
  timeout: 30
  master_only: False

logging:
  loglevel: INFO
  logfile: {{curator_log_path}}
  logformat: default
  blacklist: []

